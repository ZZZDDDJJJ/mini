/* pages/search/search.wxss */
@import '../../iconfont/iconfont.wxss';
.container{
  display: flex;
  flex-flow: row;
  font-size: 30rpx;
  justify-content: center;
  align-items: center
}
.search{
  display: flex;
  flex-flow: row;
  border: 1rpx solid whitesmoke;
  background-color: whitesmoke;
  border-radius: 30rpx;
  height: 60rpx;
  width: 90%;
  margin: 10rpx 0;
  align-items: center;
  
}
.search input{
  font-size: 27rpx;
  width: 100%;   
}

.sou{
 width: 50rpx;
 height: 50rpx;
}
.hop-research{
  margin-top: 40rpx;

}
.hop-research:after{
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
  
}
.title_one{
  border-bottom: 1rpx solid #eee;
  padding-bottom:20rpx;
  box-sizing: border-box;
}

.item{
  width:140rpx;
  height: 60rpx;
  color: #b1b1b1;
  line-height: 60rpx;
  background: white;
  border: 1rpx solid #eee;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin: 15rpx 25rpx 0 25rpx;

}
.icon{
  float: left;
  width: 100%;
  height: 100%;
}
.f{
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.go{
  width: 25%;
  border:1rpx solid #bbb;
  text-align: center;
  float: left;
  margin: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}