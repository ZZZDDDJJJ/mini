/* pages/goods/goods.wxss */

page{
 height: 100%;
 background-color: #F3F4F5;
}


.img_item{
  width: 48.5%;
  margin: 2px;
  display: inline-block;
  vertical-align: top;
  background-color: #fff;
  font-size: 24rpx;

}


.item_info{
  border-top: 10px solid #F3F4F5;

}


.product-name{
  color: #000;
  text-align: left;
  margin: 0 5px;
  margin-bottom: 5px;
}

.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5px;
  font-weight: 900;


}


.product-price-wrap .product-price-old{
  color: #888;
  padding-left:2px;
  text-decoration: line-through;
  

}


.product-price-wrap .discount{
  margin-left:30px;
  background-color: #000;
  color: #fff;
}