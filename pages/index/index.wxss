/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.wrapper{
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  background: #fff;
  
}
.search{
  display: flex;
  flex-flow: row;
  border: 1rpx solid whitesmoke;
  background-color: whitesmoke;
  border-radius: 30rpx;
  height: 60rpx;
  margin: 10rpx 0;
  align-items: center;

}
.search input{
  font-size: 27rpx;
  width: 100%;   
}

.sou{
 width: 50rpx;
 height: 50rpx;
}


swiper{
  margin-top: 80rpx;
}

.slide-image{
  width: 750rpx;
  height: 300rpx;
}
.slide-image1{
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx 40rpx 0 40rpx;
}

.nav{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  margin: 20rpx 0;
}

.nav-container{
  width: 180rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  /* text-align: center; */
  font-size: 20rpx;
  margin-bottom: 10rpx;
}

.content{
  background-color: #FFFAFA;
  height: 400rpx;
  border: 20rpx solid white;
  border-radius: 10%;
}

.content.p{
     background-color: #fff5ee;
}
.content.p1{
     background-color: #fff8dc;
}
.content .content-text{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 20rpx 0 20rpx;
}

.content .content-text .tip{
  margin: 0rpx 10rpx;
  font-weight: bold;
  font-size: 35rpx;
}

.content .content-text .more{
  margin: 0rpx 10rpx;
  font-size: 20rpx;
}

.content-one{
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  align-items: center;
  padding-top: 40rpx;
}
.content image{
  width: 200rpx;
  height: 200rpx;
}



