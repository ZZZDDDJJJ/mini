/* pages/my/my.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F0154A;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


.order{
  display: flex;
  flex-flow: row ;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;

}


.myorder-text{
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}


.myorderlook-text{
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width:60%;
  text-align: right;
}



.navs{
  display: flex;
  flex-flow: row;
}

.nav-item{
  width:25%;
  display: flex;
  flex-flow: column;
  align-items: center;
  padding: 20rpx;
}


.nav-item .nav-image{
  width: 60rpx;
  height:  60rpx;
  margin: 5rpx;
}

.nav-item text{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

.person-list{
  display: flex;
  flex-flow: column;
  align-items: left;
}

.list-item{
  display: flex;
  flex-flow: row;
  align-items: center;
  height: 80rpx;
}

.item-image{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}


.item-text{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;

}


.person-line{
  width: 100%;
  height: 5rpx;
  background-color: lightgray;
  margin-left: 90rpx;
}

.line{
  width: 100%;
  height: 5rpx;
  background-color: lightgray;
}

.separate{
  width: 100%;
  height: 20rpx;
  background-color: lightgray;
  
}